---
import { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

import '@fontsource/inter';
import '@fontsource/bricolage-grotesque/latin-600.css';
import '@fontsource/bricolage-grotesque/latin-500.css';
import '@fontsource/bricolage-grotesque';

interface Props {
  title: string;
  description?: string;
  heroImage?: ImageMetadata;
}

const { title, description, heroImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    {description && <meta name="description" content={description} />}
    <meta name="viewport" content="width=device-width" />
    <meta name="view-transition" content="same-origin" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    {heroImage && <Image class="hero" src={heroImage} alt="Page Title Image" />}
    <article>
      <header>
        <slot name="header" />
      </header>
      <slot />
    </article>
  </body>

  <style is:global>
    html {
      /* max-width: 70ch; */
      /* padding: 3em 1em; */
      margin: auto;
      line-height: 1.75;
      font-size: 1.25em;

      font-family:
        'Inter',
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        'Segoe UI',
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        'Open Sans',
        'Helvetica Neue',
        sans-serif;
    }

    body {
      color: #444;
      background-color: #eee;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin: 3em 0 1em;
      font-family: 'Bricolage Grotesque', serif;
      font-size: 1.1em;
      font-weight: 500;
    }

    article h1 {
      margin-top: 0;
      line-height: 1;
      font-weight: 600;
      font-size: 1.3em;
    }

    article aside {
      color: #777;
      font-size: small;
      margin-bottom: 0;
      line-height: 1.4;
    }

    p,
    ul,
    ol {
      margin-bottom: 2em;
      color: #1d1d1d;
      font-family: sans-serif;
    }

    article {
      line-height: 1.5;
      /* font-size: 1.437rem; */
      /* max-width: 700px; */
      max-width: 70ch;
      margin: 0 auto;
      padding: 40px 20px;
    }

    .hero {
      height: 33vh;
      width: 100%;
      object-fit: cover;
    }
  </style>
</html>
